<% title "Sign Up" %>

<h2>Sign Up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :first, "First Name:" %>
  <%= f.text_field :first %></div><br />

 <div><%= f.label :last, "Last Name:" %>
  <%= f.text_field :last %></div><br />

  <div><%= f.label :email, "Email Address:" %>
  <%= f.email_field :email %></div><br />

  <div><%= f.label :password, "Password:" %>
  <%= f.password_field :password %></div><br />

  <div><%= f.label :password_confirmation, "Confirm Password:" %>
  <%= f.password_field :password_confirmation %></div><br />

  <div><%= f.submit "Sign up" %></div><br />
<% end %>

<%= render :partial => "devise/shared/links" %>
