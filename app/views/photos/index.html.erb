<h1>Listing photos</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Text</th>
    <th>Embed url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= Question.find(photo.question_id).inquiry %></td>
    <td><%= photo.text %></td>
    <td class="thumbnail"><%= image_tag(photo.embed_url, :size => "150x150") %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

